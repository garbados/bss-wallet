<%- model_class = Merchant -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:store_name) %></th>
      <th><%= model_class.human_attribute_name(:rep_first_name) %></th>
      <th><%= model_class.human_attribute_name(:rep_last_name) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @merchants.each do |merchant| %>
      <tr>
        <td><%= link_to merchant.id, merchant_path(merchant) %></td>
        <td><%= merchant.store_name %></td>
        <td><%= merchant.rep_first_name %></td>
        <td><%=l merchant.rep_last_name %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_merchant_path(merchant), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      merchant_path(merchant),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_merchant_path,
            :class => 'btn btn-primary' %>
