<%= form_for @merchant, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :store_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :store_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :rep_first_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :rep_first_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :rep_last_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :rep_last_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address_st_1, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address_st_1, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address_st_2, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address_st_2, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :city, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :city, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :state, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :state, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :zip, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :zip, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                merchants_path, :class => 'btn' %>
  </div>
<% end %>
