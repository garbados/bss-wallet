<%= semantic_form_for @offer do |f| %>
  <%= render 'shared/error_explanation', object: @offer %>
  <%= f.inputs  do %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :coupon_value %>
    <%= f.input :num_coupons %>
    <%= f.input :point_value %>
    <%= f.input :bid_value %>
    <%= f.input :offer_expiration_date %>
    <%= f.input :coupon_expiration_date %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
    <%= f.action :cancel, :as => :link %>
  <% end %>
<% end %>