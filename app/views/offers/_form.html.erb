<%= semantic_form_for @offer do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :description, :as => :text %>
    <%= f.input :coupon_value %>
    <%= f.input :num_coupons %>
    <%= f.input :point_value %>
    <%= f.input :bid_value %>
    <%= f.input :offer_expiration_date, :as => :date_select %>
    <%= f.input :coupon_expiration_date, :as => :date_select %>
    <%= f.input :merchant_id, :as => :select,
                :collection => Hash[ Merchant.all.map{ |merchant| 
                  [ merchant.store_name, merchant.id ]}] %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
    <%= f.action :cancel, :as => :link %>
  <% end %>
<% end %>
