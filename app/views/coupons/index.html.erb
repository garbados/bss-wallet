<%- model_class = Coupon -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= Offer.human_attribute_name(:name) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @coupons.each do |coupon| %>
      <tr>
        <td><%= link_to coupon.id, coupon_path(coupon) %></td>
        <td><%= link_to coupon.offer.name, offer_path(coupon.offer) %></td>
        <td><%= link_to "#{coupon.consumer.first_name} #{coupon.consumer.last_name}", consumer_path(coupon.consumer) %></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      coupon_path(coupon),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
